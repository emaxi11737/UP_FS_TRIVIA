{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "mocha",
      "chai",
      "reflect-metadata",
      "swagger-express-ts"
    ],
    "paths": {
      "@domain/*": [
        "domain/*"
      ],
      "@application/*": [
        "application/*"
      ],
      "@entrypoint/*": [
        "entrypoint/*"
      ],
      "@infraestructure/*": [
        "infraestructure/*"
      ],
      "@configuration/*": [
        "configuration/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}